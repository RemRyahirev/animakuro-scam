{
  "compilerOptions": {
    "assets": [
        "../../../libs/**/*.proto",
        "../../../apps/**/*.handlebars"
    ],
    "watchAssets": true,
    "webpack": true,
    "tsConfigPath": "apps/api/tsconfig.app.json",
    "plugins": [{
        "name": "@nestjs/graphql",
        "options": {
            "typeFileNameSuffix": ["input.type.ts", "results.type.ts", "args.type.ts", ".model.ts"],
            "introspectComments": true
        }
    }]
  },
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "monorepo": true,
  "root": "apps/api",
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "statistic": {
      "type": "application",
      "root": "apps/statistic",
      "entryFile": "main",
      "sourceRoot": "apps/statistic/src",
      "compilerOptions": {
        "tsConfigPath": "apps/statistic/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}
