{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "lib": [
            "dom",
            "esnext.asynciterable"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "pretty": true,
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist",
        "allowJs": true,
        "paths": {
            "@common": [
                "./common/*"
            ],
            "@core": [
                "./core/*"
            ],
            "@database": [
                "./database/*"
            ],
            "@loaders": [
                "./loaders/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/*.ts",
        "./src/**/*.ts",
        "./src/**/**/*.ts"
    ]
}
